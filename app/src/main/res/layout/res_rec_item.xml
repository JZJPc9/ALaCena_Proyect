<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/txtNomRec"
        style="@style/estilotextsubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        tools:text="Nombre Receta"/>

    <TextView
        android:id="@+id/txtIngRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_below="@+id/txtNomRec"
        android:text="@string/txtIngRec"
        tools:text="Ingredientes:    \n 1.Ing1  5pz    ✓   \n 2.Ing2  2pz    ✗"/>

    <TextView
        android:id="@+id/txtPreRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIngRec"
        android:paddingTop="15dp"
        android:text="@string/txtPreRec"
        android:textSize="10dp"
        tools:text="Preparacion:  \n 1.Paso 1 \n 2.Paso 2 \n 3.Paso 3"/>



</RelativeLayout>